{
  "filters": {
    "name": {
      "aliases": ["--name", "--n"],
      "description": "Filter by Pokemon name or nickname",
      "type": "string",
      "syntax": "--name <name>",
      "example": "--name pikachu",
      "notes": "Searches both Pokemon name and nickname (case insensitive)"
    },
    "evolution": {
      "aliases": ["--evolution", "--evo"],
      "description": "Filter by evolution line",
      "type": "string",
      "syntax": "--evolution <name>",
      "example": "--evolution eevee",
      "notes": "Searches for Pokemon in the same evolution family"
    },
    "level": {
      "aliases": ["--level", "--lv"],
      "description": "Filter by Pokemon level",
      "type": "numeric_comparison",
      "syntax": "--level <operator> <value>",
      "example": "--level >= 50",
      "operators": [">", "<", ">=", "<=", "="],
      "notes": "Default operator is = if not specified"
    },
    "hpiv": {
      "aliases": ["--hpiv"],
      "description": "Filter by HP IV stat",
      "type": "numeric_comparison",
      "syntax": "--hpiv <operator> <value>",
      "example": "--hpiv > 25",
      "operators": [">", "<", ">=", "<=", "="],
      "range": [0, 31],
      "notes": "IV values range from 0-31"
    },
    "atkiv": {
      "aliases": ["--atkiv"],
      "description": "Filter by Attack IV stat",
      "type": "numeric_comparison",
      "syntax": "--atkiv <operator> <value>",
      "example": "--atkiv >= 30",
      "operators": [">", "<", ">=", "<=", "="],
      "range": [0, 31],
      "notes": "IV values range from 0-31"
    },
    "defiv": {
      "aliases": ["--defiv"],
      "description": "Filter by Defense IV stat",
      "type": "numeric_comparison",
      "syntax": "--defiv <operator> <value>",
      "example": "--defiv = 31",
      "operators": [">", "<", ">=", "<=", "="],
      "range": [0, 31],
      "notes": "IV values range from 0-31"
    },
    "spatkiv": {
      "aliases": ["--spatkiv"],
      "description": "Filter by Special Attack IV stat",
      "type": "numeric_comparison",
      "syntax": "--spatkiv <operator> <value>",
      "example": "--spatkiv > 20",
      "operators": [">", "<", ">=", "<=", "="],
      "range": [0, 31],
      "notes": "IV values range from 0-31"
    },
    "spdefiv": {
      "aliases": ["--spdefiv"],
      "description": "Filter by Special Defense IV stat",
      "type": "numeric_comparison",
      "syntax": "--spdefiv <operator> <value>",
      "example": "--spdefiv >= 25",
      "operators": [">", "<", ">=", "<=", "="],
      "range": [0, 31],
      "notes": "IV values range from 0-31"
    },
    "spdiv": {
      "aliases": ["--spdiv"],
      "description": "Filter by Speed IV stat",
      "type": "numeric_comparison",
      "syntax": "--spdiv <operator> <value>",
      "example": "--spdiv = 31",
      "operators": [">", "<", ">=", "<=", "="],
      "range": [0, 31],
      "notes": "IV values range from 0-31"
    },
    "shiny": {
      "aliases": ["--shiny", "--s"],
      "description": "Show only shiny Pokemon",
      "type": "boolean",
      "syntax": "--shiny",
      "example": "--shiny",
      "notes": "No value needed, just the flag"
    },
    "favorite": {
      "aliases": ["--favorite", "--fav"],
      "description": "Show only favorite Pokemon",
      "type": "boolean",
      "syntax": "--favorite",
      "example": "--favorite",
      "notes": "No value needed, just the flag"
    },
    "legendary": {
      "aliases": ["--legendary", "--legend"],
      "description": "Show only legendary Pokemon",
      "type": "boolean",
      "syntax": "--legendary",
      "example": "--legendary",
      "notes": "No value needed, just the flag (for future use)"
    },
    "mythical": {
      "aliases": ["--mythical", "--myth"],
      "description": "Show only mythical Pokemon",
      "type": "boolean",
      "syntax": "--mythical",
      "example": "--mythical",
      "notes": "No value needed, just the flag (for future use)"
    },
    "price": {
      "aliases": ["--price", "--p"],
      "description": "Filter by price (market only)",
      "type": "numeric_comparison",
      "syntax": "--price <operator> <value>",
      "example": "--price < 10000",
      "operators": [">", "<", ">=", "<=", "="],
      "notes": "Only works in market commands"
    }
  },
  "operators": {
    ">": {
      "description": "Greater than",
      "example": "--level > 50"
    },
    "<": {
      "description": "Less than",
      "example": "--hpiv < 20"
    },
    ">=": {
      "description": "Greater than or equal to",
      "example": "--atkiv >= 25"
    },
    "<=": {
      "description": "Less than or equal to",
      "example": "--price <= 5000"
    },
    "=": {
      "description": "Equal to (default)",
      "example": "--level 100"
    }
  },
  "examples": {
    "basic_filters": [
      "!pokemon --n pikachu",
      "!pokemon --shiny",
      "!pokemon --favorite",
      "!pokemon --level >= 50"
    ],
    "iv_filters": [
      "!pokemon --hpiv > 25 --atkiv >= 30",
      "!pokemon --spdiv = 31 --shiny",
      "!pokemon --defiv >= 20 --spdefiv >= 20"
    ],
    "complex_filters": [
      "!pokemon --n pikachu --spdiv > 25 --shiny",
      "!pokemon --evo eevee --level >= 50 --favorite",
      "!market search --evo eevee --price < 10000 --level >= 50"
    ]
  },
  "command_usage": {
    "pokemon": {
      "description": "View your Pokemon collection with filters",
      "syntax": "!pokemon [filters]",
      "examples": [
        "!pokemon",
        "!pokemon --shiny",
        "!pokemon --n charizard --level >= 80",
        "!pokemon --hpiv > 25 --atkiv > 25 --defiv > 25"
      ]
    },
    "market_search": {
      "description": "Search market listings with filters",
      "syntax": "!market search [filters]",
      "examples": [
        "!market search --n pikachu",
        "!market search --price < 5000 --shiny",
        "!market search --evo eevee --level >= 50"
      ]
    },
    "release": {
      "description": "Release Pokemon with filters",
      "syntax": "!release [filters]",
      "examples": [
        "!release --level < 10",
        "!release --hpiv < 10 --atkiv < 10",
        "!release --n rattata --level < 20"
      ]
    }
  },
  "metadata": {
    "version": "1.0",
    "last_updated": "2024",
    "description": "Pokemon filter definitions for the bot's filtering system",
    "notes": "All filters are case-insensitive and support multiple combinations"
  }
} 